<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.appinventario.controller.FacturaDetalleController">

    <!-- Cabecera -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15; -fx-background-color: #ffffff;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Detalle de Factura" />
            <Label fx:id="lblNumeroFactura" style="-fx-font-size: 16px; -fx-text-fill: gray;" />
        </HBox>
    </top>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
         <Pane prefHeight="154.0" prefWidth="860.0">
            <children>
               <Label layoutX="19.0" layoutY="14.0" style="-fx-font-weight: bold;" text="Nombre Cliente:" />
               <Label layoutX="20.0" layoutY="37.0" prefHeight="36.0" prefWidth="79.0" style="-fx-font-weight: bold;" text="Fecha factura:" />
               <Label layoutX="22.0" layoutY="76.0" style="-fx-font-weight: bold;" text="Valor Total:" />
               <Label layoutX="266.0" layoutY="12.0" style="-fx-font-weight: bold;" text="Celular:" />
               <Label layoutX="264.0" layoutY="44.0" style="-fx-font-weight: bold;" text="Dirección:" />
               <Label fx:id="idCliente" layoutX="117.0" layoutY="14.0" prefHeight="18.0" prefWidth="145.0" />
               <Label fx:id="idFecha" layoutX="111.0" layoutY="48.0" prefHeight="17.0" prefWidth="150.0" />
               <Label fx:id="idTotal" layoutX="100.0" layoutY="76.0" prefHeight="17.0" prefWidth="115.0" />
               <Label fx:id="idCelular" layoutX="320.0" layoutY="13.0" prefHeight="17.0" prefWidth="144.0" />
               <Label fx:id="idDireccion" layoutX="327.0" layoutY="44.0" prefHeight="17.0" prefWidth="145.0" />
            </children>
         </Pane>

            <!-- Tabla de productos -->
            <TableView fx:id="tablaDetalle" prefHeight="304.0" prefWidth="860.0">
                <columns>
                    <TableColumn fx:id="colProducto" prefWidth="100" text="Producto" />
                    <TableColumn fx:id="colDescripcion" prefWidth="150" text="Descripción" />
                    <TableColumn fx:id="colTalla" prefWidth="70" text="Talla" />
                    <TableColumn fx:id="colCantidad" prefWidth="80" text="Cantidad" />
                    <TableColumn fx:id="colPrecio" prefWidth="120" text="Precio Unitario" />
                    <TableColumn fx:id="colTipoPrecio" prefWidth="120" text="Tipo de Precio" />
                    <TableColumn fx:id="colSubtotal" prefWidth="100" text="Subtotal" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Botones -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15;">
            <Button fx:id="btnDescargarFactura" onAction="#descargarPdf" text="Descargar" />
            <Button fx:id="btnCancelar" onAction="#cancelar" text="Cancelar" />
        </HBox>
    </bottom>
</BorderPane>
