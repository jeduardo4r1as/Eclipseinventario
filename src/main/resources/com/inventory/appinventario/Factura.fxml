<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="root" prefHeight="473.0" prefWidth="876.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.appinventario.controller.FacturaController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox VBox.vgrow="ALWAYS">
                    <children>
                        <ToolBar orientation="VERTICAL" prefHeight="40.0" style="-fx-background-color: linear-gradient(to bottom, #0f0f0f, #1c1c1c);">
                            <items>
                                <Button fx:id="btnListar" contentDisplay="TOP" maxWidth="1.7976931348623157E308" onAction="#listarFacturas" text="Listar">
                                    <graphic>
                                        <FontIcon iconColor="#d4af37" iconLiteral="fa-refresh" iconSize="22" />
                                    </graphic>
                                </Button>
                                <Button fx:id="btnVerFacturas" contentDisplay="TOP" layoutX="10.0" layoutY="65.0" maxWidth="1.7976931348623157E308" onAction="#verFacturas" text="Visualizar">
                                    <graphic>
                                        <FontIcon iconColor="#d4af37" iconLiteral="fa-edit" iconSize="22" />
                                    </graphic>
                                </Button>
                            </items>
                        </ToolBar>
                        <VBox prefHeight="400.0" prefWidth="578.0" HBox.hgrow="ALWAYS">
                            <children>
                                <TextField fx:id="cjBuscar" onKeyReleased="#buscarProductoKeyReleased">
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </VBox.margin>
                                </TextField>
                                <HBox alignment="TOP_RIGHT" spacing="5">
                                    <Button fx:id="btnExcel" onAction="#GenerarExcel" prefWidth="80" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Excel" />
                                    <Button fx:id="btnPdf" onAction="#GenerarPdf" prefWidth="80" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="PDF" />
                                </HBox>
                                <TableView fx:id="tablaProductos" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colCodigo" prefWidth="144.0000228881836" text="NUMERO DE FACTURA" />
                                        <TableColumn fx:id="colNombre" prefWidth="176.79998779296875" text="NOMBRE" />
                                        <TableColumn fx:id="colFechaVenta" prefWidth="124.80007934570312" text="FECHA VENTA" />
                              <TableColumn fx:id="colTotal" minWidth="7.20001220703125" prefWidth="102.4000244140625" text="TOTAL" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
